<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="description" content="Hỏi Dân IT - Dự án laptopshop" />
  <meta name="author" content="Hỏi Dân IT" />
  <title>Manager Product - Hỏi Dân IT</title>
  <link href="/admin/css/styles.css" rel="stylesheet" />
  <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script>
    $(document).ready(() => {
      const avatarFile = $("#avatarFile");
      avatarFile.change(function (e) {
        const imgURL = URL.createObjectURL(e.target.files[0]);
        $("#avatarPreview").attr("src", imgURL);
        $("#avatarPreview").css({ "display": "block" });
      });
    }); 
  </script>
</head>

<body class="sb-nav-fixed">
  <%- include('../layout/header') %>

    <div id="layoutSidenav">
      <%- include('../layout/sidenav') %>

        <div id="layoutSidenav_content">
          <main>
            <div class="container-fluid px-4">
              <h1 class="mt-4">Manage Products</h1>
              <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item"><a href="/admin">Dashboard</a></li>
                <li class="breadcrumb-item active"><a href="/admin/product">Products</a></li>
              </ol>

              <div class="card mb-4">
                <div class="card-header">
                  <i class="fas fa-user-plus me-1"></i>
                  Create a new Product
                </div>
                <div class="card-body">
                  <div class="row justify-content-center">
                    <div class="col-lg-8 col-md-10">
                      <form action="/admin/update-product/:id" method="post" enctype="multipart/form-data">

                        <div class="row">
                          <div class="mb-3 col-6">
                            <label for="nameInput" class="form-label">Tên sản phẩm:</label>
                            <input value="<%= product.name %>" type="text" class="form-control" name="name"
                              id="nameInput">
                          </div>

                          <div class="mb-3 col-6">
                            <label for="priceInput" class="form-label">Giá sản phẩm:</label>
                            <input value="<%= product.price %>" type="text" class="form-control" name="price"
                              id="priceInput">
                          </div>
                        </div>

                        <div class="mb-3">
                          <label for="detailDesc" class="form-label">Mô tả chi tiết</label>
                          <textarea type="text" class="form-control" name="detailDesc"
                            id="detailDesc"><%= product.detailDesc %></textarea>
                        </div>

                        <div class="mb-3">
                          <label for="shortDesc" class="form-label">Mô tả ngắn gọn:</label>
                          <input value="<%= product.shortDesc %>" type="text" class="form-control" name="shortDesc"
                            id="shortDesc">
                        </div>

                        <div class="mb-3">
                          <label for="quantity" class="form-label">Số lượng:</label>
                          <input value="<%= product.quantity %>" type="number" class="form-control" name="quantity"
                            id="quantity">
                        </div>

                        <div class="row">
                          <div class="mb-3 col-6">
                            <label class="form-label">NSX</label>
                            <select id="volume" name="factory" class="form-select">
                              <% for ( var i=0; i < factoryOptions.length; i++ ) { var
                                selected=(product.factory===factoryOptions[i].value) ? "selected" : "" ; %>
                                <option name="<%=factoryOptions[i].name %>" value="<%=factoryOptions[i].value %>"
                                  <%=selected %>>
                                  <%=factoryOptions[i].name %>
                                </option>
                                <% } %>
                            </select>
                          </div>
                          <div class="mb-3 col-6">
                            <label class="form-label">TAG</label>
                            <select id="volume" name="factory" class="form-select">
                              <% for ( var i=0; i < targetOptions.length; i++ ) { var
                                selected=(product.target===targetOptions[i].value) ? "selected" : "" ; %>
                                <option name="<%=targetOptions[i].name %>" value="<%=targetOptions[i].value %>"
                                  <%=selected %>>
                                  <%=targetOptions[i].name %>
                                </option>
                                <% } %>
                            </select>
                          </div>
                        </div>

                        <div class="mb-3">
                          <label for="avatarFile" class="form-label">Image: </label>
                          <input class="form-control" type="file" id="avatarFile" accept=".png, .jpg, .jpeg"
                            name="image">
                        </div>
                        <% if (product.image) { %>
                          <img style="max-height: max-content; width: max-content; display: block;" alt="avatar preview"
                            id="avatarPreview" src="/images/product/<%=product.image%>" />
                          <% } else { %>
                            <img style="max-height: max-content; width: max-content; display: none;"
                              alt="avatar preview" id="avatarPreview" />
                            <% } %>

                              <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                                <a href="/admin/product" class="btn btn-secondary me-md-2">Cancel</a>
                                <button type="submit" class="btn btn-warning">Submit</button>
                              </div>

                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </main>

          <%- include('../layout/footer') %>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"
      crossorigin="anonymous"></script>
    <script src="/admin/js/scripts.js"></script>
</body>

</html>